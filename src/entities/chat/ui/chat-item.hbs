<li class="chat-item">
    {{>Avatar avatarUrl=null }}
    <div class="chat-item__info">
        <p class="chat-item__time">{{time}}</p>
        <p class="chat-item__name">{{name}}</p>
        <p class="chat-item__last-message">{{lastMessage}}</p>
        <div class="chat-item__counter"><p>{{counter}}</p></div>
    </div>
</li>